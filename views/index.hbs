<h1 style="text-align: center;">Surface Crack Segmentation with Deep Learning (PoC)</h1>
<h2 style="text-align: center;">Upload photos</h2>
<form id="upload-form" action="/upload" enctype="multipart/form-data" method="POST">
<h2 style="text-align: center;">Select an image to upload:</h2>
<div class="upload-container" style="text-align: center;"><input id="file-picker" name="image" type="file" /></div>
<div style="text-align: center;"><input type="submit" value="Upload Image" /></div>
</form>
<p id="message" style="text-align: center;">{{message}}</p>
<p>&nbsp;</p>
<script>
  document.addEventListener('DOMContentLoaded', () => {

    const message = document.getElementById('message');
    const picker = document.getElementById('file-picker');

    document.getElementById('upload-form').addEventListener('submit', (e) => {

      message.innerText = '';

      if(!picker.files.length) {
        message.innerText = 'Please select an image to upload.';
        e.preventDefault();
        return false;
      }

    });

  });
</script>